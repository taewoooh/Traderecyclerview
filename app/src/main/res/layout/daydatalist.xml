<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <View
        android:id="@+id/cancelline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:background="@color/cancelline"

        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/newdata"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="신규"
            android:textStyle="normal"
            android:visibility="gone">

        </ImageView>

        <RelativeLayout
            android:layout_width="@dimen/pyeungsu_layout"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">


            <TextView
                android:id="@+id/tradeyearmonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                android:text="2021.8.21"
                android:textSize="@dimen/pyeungsu_ymd_high"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/daycancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                android:textSize="9dp"


                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/price"
            android:layout_width="@dimen/pyeungsu_layout"
            android:layout_height="50dp"
            android:layout_weight="1">

            <TextView

                android:id="@+id/trade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="16억"
                android:textColor="@android:color/black"
                android:textSize="@dimen/pyeungsu_price"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/pricelinear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trade"
                android:layout_centerHorizontal="true">


                <TextView

                    android:id="@+id/price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[최고가]"
                    android:textColor="@color/highprice_color"
                    android:textSize="@dimen/pricelistsize"
                    android:textStyle="bold"
                    android:weightSum="1" />

                <TextView

                    android:id="@+id/price3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="2dp"
                    android:text="[직거래]"
                    android:textSize="@dimen/pricelistsize"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:weightSum="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pricelinear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trade"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp">

                <TextView
                    android:id="@+id/price4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="[계약취소]"
                    android:textSize="@dimen/pricelistsize"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:weightSum="1" />

                <TextView
                    android:id="@+id/price5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="[직거래]"
                    android:textSize="@dimen/pricelistsize"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:weightSum="1" />


            </LinearLayout>
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="@dimen/pyeungsu_layout"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/center"
                android:visibility="visible" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/updown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/up"
                    android:visibility="gone"/>



                <TextView
                    android:id="@+id/updown_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="2000"
                    android:layout_toRightOf="@+id/updown"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/pyeungsu_ymd_high"
                    android:textStyle="bold" />

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:visibility="visible">

            <TextView
                android:id="@+id/highper"
                android:layout_width="@dimen/pyeungsu_layout"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="20"
                android:textSize="@dimen/pyeungsu_ymd_high"
                android:textStyle="normal" />

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>